<section class="parallax">
    <img src="/assets/images/burger-icon.png">
</section>


<h1> EAT DA BURGER!!! </h1>

<main> 
  <section>

    <h2> Add a Burger to Eat! </h2>

      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="bn">Burger Name:</label>
          <input type="text" id="bn" name="name", class="drawn-boarder">
         
          <button class="add-burger" type="submit"> Add Burger
          </button>
        </div>

      </form>
  </section>

  <section class="burger-options">
    <div class="options">
      <div> 
        <h2> All Uneaten Burgers </h2>

          <ul>
            {{#each burger}}
              {{#unless this.devoured}}

                <li>
                  {{this.burger_name}}

                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="{{this.id}}"">
                    <button type="submit">Devour!</button>
                  </form>

                  {{> burgers/delete-burger}}

                </li>
              {{/unless}}
            {{/each}}
          </ul>
      </div>
    </div>


    <div class="options">
      <h2> Available Burgers to Eat </h2>

      <ul>
        {{#each burger}}
        {#if this.devoured}}
          <li>
            {{this.burger_name}}

            {{> burgers/delete-burger}}

          </li>
        {{/if}}
        {{/each}}
      </ul>

    </div>

  </section>
</main>





